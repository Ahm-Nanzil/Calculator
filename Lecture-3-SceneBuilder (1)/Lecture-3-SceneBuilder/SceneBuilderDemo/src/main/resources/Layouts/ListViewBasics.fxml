<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Layouts.ListViewBasicsController">
   <children>
      <ListView fx:id="playerListView" layoutX="200.0" layoutY="100.0" prefHeight="200.0" prefWidth="200.0">
         <effect>
            <DropShadow />
         </effect></ListView>
      <Label fx:id="playerLabel" alignment="TOP_CENTER" layoutY="52.0" prefHeight="38.0" prefWidth="602.0" text="Select a Player">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <MenuBar layoutY="2.0" prefHeight="26.0" prefWidth="602.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <CheckMenuItem mnemonicParsing="false" text="Autosave" />
                  <RadioMenuItem mnemonicParsing="false" text="R1">
                     <toggleGroup>
                        <ToggleGroup fx:id="G1" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem mnemonicParsing="false" text="R2" toggleGroup="$G1" />
                  <MenuItem fx:id="newMenu" mnemonicParsing="false" onAction="#createNewMenu" text="New" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" text="Close" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Save" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Edit">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help Please">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Please Let us go!">
              <items>
                  <RadioMenuItem mnemonicParsing="false" text="R1">
                     <toggleGroup>
                        <ToggleGroup fx:id="G2" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem mnemonicParsing="false" text="R2" toggleGroup="$G2" />
                  <CheckMenuItem mnemonicParsing="false" text="Unspecified Action" />
                  <MenuItem mnemonicParsing="false" text="Please" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Let" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
